extends layouts/login-layout.pug

block content 
    .loginContainer
        h1 Login to Critter
        form(method="post")
            p.errorMessage #{errorMessage} 
            
            input(type="text", name="logUsername", placeholder="Username or email", value=logUsername, required="")
            input(type="password", name="logPassword", placeholder="Password", value=logUsername, required = "")
            input(type="submit", value="Sign In")
        a(href="/register") New user? Register here.